# Top-most EditorConfig file
root = true

# Unix-style newlines with newline ending
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = false

[{Dockerfile*,**.yml,**.yaml}]
indent_style = space
indent_size = 2

[{**.sh,root/etc/s6-overlay/s6-rc.d/**,root/etc/cont-init.d/**,root/etc/services.d/**,root/usr/local/bin/**}]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false
